{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "./dist"
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
